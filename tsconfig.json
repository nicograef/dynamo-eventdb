{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2023",
    "typeRoots": ["./node_modules/@types"],
    "verbatimModuleSyntax": true
  },
  "include": ["src"]
}
